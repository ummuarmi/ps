<%- include ('partials/header.ejs'); -%>
<div class="table-wrapper">
    <% if (jobs.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Company Logo</th>
                <th scope="col">Job Title</th>
                <th scope="col">Job Description</th>
                <th scope="col">Location</th>
                <th scope="col">Company Name</th>
                <th scope="col">Job Status</th>
                <th scope="col">Posted</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            <% jobs.forEach((job, index) => { %>
                <tr>
                    <th scope="row"><%= job.job_id %></th>
                    <td><img src="/assets/img/<%= job.image %>" class="rounded-circle player-img" alt=""></td>
                    <td><%= job.job_title %></td>
                    <td><%= job.job_description %></td>
                    <td><%= job.job_location %></td>
                    <td><%= job.job_company %></td>
                    <td><%= job.job_status %></td>
                    <td><%= job.datePosted %></td>
                    <td>
                        <a href="/recruiter/edit/<%= job.job_id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                        <a href="/recruiter/delete/<%= job.job_id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No Jobs found. Go <a href="/recruiter/add" >HERE</a> to add New Job Vacancy.</p>
    <% } %>
</div>
<%- include ('partials/footer.ejs'); -%>
